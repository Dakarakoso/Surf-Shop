
    <div style="margin: 20px 0">
        <nav aria-label="Page navigation example">
            <ul class="pagination">
              <li class="page-item">
                   <% if(posts.page - 1) { %>
        <a class="page-link" href="<%= paginateUrl %><%= posts.page - 1 %>">Prev</a>
    <% } %>
</li>
<% if(posts.pages > 1 && posts.docs.length) { %>
    <% for(let i = 1; i <= posts.pages; i++) { %>  
              <li class="page-item">
                        <a class="page-link" href="/posts?page=<%= i %>" <%= i === posts.page ? 'style=color:#000' : '' %>><%= i %></a>
                        <% } %>
                    </li>
                    <% } %> 

              <li class="page-item">
                <% if((posts.page + 1) <= posts.pages) { %>
                    <a class="page-link" href="<%= paginateUrl %><%= posts.page + 1 %>">Next</a>
                    <% } %> 
                </li>
            </ul>
          </nav>
    </div>